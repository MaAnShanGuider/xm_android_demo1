<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.task.index.FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical"
        >

        <com.zhangxueyou.android2._commonActivity.CustomTitleBar
            android:id="@+id/titlebar"
            android:background="#DCDCDC"
            app:right_icon="@drawable/ic_baseline_apartment_24"
            app:right_text="更多"
            app:titlebar_type="11"
            app:left_icon="@drawable/ic_back"
            app:title="我是标题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按钮"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/xm_webView"
            />

        <WebView
            android:id="@+id/xm_webView"
            app:layout_constraintTop_toTopOf="@id/button_first"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </LinearLayout>


</FrameLayout>